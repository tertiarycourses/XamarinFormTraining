<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HPlusSports.ProductDetail">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="10,20">
            <StackLayout Orientation="Horizontal">
                <Label Text="Name:" />
                <Label Text="ProductName" />
            </StackLayout>

            <StackLayout Orientation="Vertical">
                <Label Text="Description:" />
                <Label Text="ProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescriptionProductDescription" />
            </StackLayout>

            <Image Source="https://hplussport.com/wp-content/uploads/2016/12/v-neck-T-shirt-for-women_LYNDA_29948.jpg"
                   Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />

            <RelativeLayout HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                <Button Text="Order"
                RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=.25}"
                        x:Name="OrderBtn"
                        ></Button>
                <Button Text="Favorite"
                RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToView, ElementName=OrderBtn, Constant=100, Property=X}"
                        ></Button>
            </RelativeLayout>

        </StackLayout>


        
    </ContentPage.Content>
</ContentPage>
